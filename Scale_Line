

#include<GL/glut.h>
#include <iostream>
#include<stdlib.h>
#include<stdio.h>
#include<math.h>

using namespace std;

int le[500],re[500],flag=0,m;

void init(){
    gluOrtho2D(0,500,0,500)
}
void edge(int x0,int y0,int x1,int y1){
    if (y1<y0){
        int tmp;
        tmp=y1;
        y1=y0;
        y0=tmp;
        tmp=x1;
        x1=x0;
        x0=tmp;
    }
    int x=x0;
    m=(y1-y0)/(x1-x0);
    for(int i=y0;i<y1;i++){
        if (x<le[i]){
            le[i]=x;
        }
        if (x>re[i])
            re[i]=x;
        x+=(1/m);
    }
}

void display(){
    glClearColor(1,1,1,1);
    glClear(GL_COLOR_BUFFER_BIT);
    glColor3f(0,0,1);
    glBegin(GL_LINE_LOOP);
    glVertex2f(200,100);
    glVertex2f(100,200);
    glVertex2f(200,300);
    glVertex2f(300,200);
    
    for (int i=0;i<500;i++){
        
    }
}

int main()
{
    cout << "Hello world!" << endl;
    return 0;
}
